<project>
  <extend>${basedir}/../project.xml</extend>
  <pomVersion>3</pomVersion>
  <id>ivatagroupware-webmail-jar</id>
  <groupId>ivatagroupware</groupId>
  <name>ivata groupware webmail JAR</name>

  <shortDescription>ivata groupware webmail JAR</shortDescription>

  <description>
    <![CDATA[
    <p>
      This project packages together all of the ivata groupware webmail
      classes into a single JAR file.
    </p>
    ]]>
  </description>
  <build>
    <sourceDirectory>
      ${basedir}/../src/java
    </sourceDirectory>
    <resources>
      <resource>
        <directory>
          ${basedir}/../src/conf
        </directory>
      </resource>
    </resources>
  </build>
</project>

