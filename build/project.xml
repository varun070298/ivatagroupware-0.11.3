<project>
  <extend>${basedir}/../project.xml</extend>
  <pomVersion>3</pomVersion>
  <id>ivatagroupware-build</id>
  <name>ivata groupware build resources</name>

  <shortDescription>
    Resources used to build ivata groupware subprojects.
  </shortDescription>

  <description>
    <![CDATA[
    <p>
      These shared resources are used to build the other subprojects of ivata
      groupware. It included scripts and files such as XSLT stylesheets, for
      example, as used to convert Eclipse project files.
    </p>
    ]]>
  </description>
  <build>
    <sourceDirectory>
      ${basedir}/src/java
    </sourceDirectory>
    <resources>
      <!-- XSLT stylesheets -->
      <resource>
        <directory>
          ${basedir}/src/xslt
        </directory>
      </resource>
    </resources>
  </build>

</project>

