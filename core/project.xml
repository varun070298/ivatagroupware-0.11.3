<project>
  <extend>${basedir}/../project.xml</extend>
  <pomVersion>3</pomVersion>
  <id>ivatagroupware-core</id>
  <groupId>ivatagroupware</groupId>
  <name>ivata groupware core</name>

  <shortDescription>Core classes upon which other ivata op projects are based.</shortDescription>

  <description>
    <![CDATA[
    <p>
      This core set of classes represents the most basic layer of portal
      classes.
    </p>
    ]]>
  </description>
  <build>
    <nagEmailAddress>openportal-devel@lists.sourceforge.net</nagEmailAddress>
    <sourceDirectory>
      ${basedir}/src/java
    </sourceDirectory>
    <resources>
      <resource>
        <directory>
          ${basedir}/src/conf
        </directory>
      </resource>
    </resources>
  </build>
</project>
