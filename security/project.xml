<project>
  <extend>${basedir}/../project.xml</extend>
  <pomVersion>3</pomVersion>
  <id>ivatagroupware-security</id>
  <groupId>ivatagroupware</groupId>
  <name>ivata groupware security engine</name>

  <shortDescription>Security for ivata op.</shortDescription>

  <description>
    <![CDATA[
    <p>
      This project contains Security components for ivata op, such as user
      facilities and the logon process.
    </p>
    ]]>
  </description>
  <dependencies>
    <dependency>
      <groupId>ivatagroupware</groupId>
      <artifactId>ivatagroupware-core-jar</artifactId>
      <version>${pom.currentVersion}</version>
    </dependency>
    <dependency>
      <groupId>ivatagroupware</groupId>
      <artifactId>ivatagroupware-htmlparser-jar</artifactId>
      <version>${pom.currentVersion}</version>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>
      ${basedir}/src/java
    </sourceDirectory>
  </build>
</project>

